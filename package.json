{
  "name": "firebase-messagebird",
  "version": "1.0.0",
  "description": "Repository of MessageBird Firebase Extensions.",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,md,yml,ts,json,yaml}\"",
    "lint": "prettier --list-different \"**/*.{js,md,yml,ts,json,yaml}\"",
    "clean": "lerna run --parallel clean",
    "build": "lerna run --parallel build",
    "test": "jest",
    "test-watch": "jest --watch",
    "test-coverage": "jest --coverage",
    "postinstall": "lerna bootstrap --no-ci && npm run clean && npm run build",
    "generate-readmes": "lerna run --parallel --ignore delete-user-data generate-readme",
    "pre-commit-lint": "commitlint -E HUSKY_GIT_PARAMS"
  },
  "repository": "https://github.com/messagebird/firebase-extensions",
  "author": "MessageBird (https://messagebird.com/)",
  "bugs": {
    "url": "https://github.com/messagebird/firebase-extensions/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.2.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lerna": "^3.20.2",
    "prettier": "2.0.5",
    "ts-jest": "^25.5.0",
    "typescript": "^3.8.3"
  }
}
